
<style>
  .crop-container {
    display: flex;
    margin-bottom: 20px;
  }
  .crop-image {

    max-width: 200px;
    min-height: 200px;
    margin-right: 20px;
  }

  .crop-image img{
    width: 100%;
    height: 100%;;
    border-radius: 5px;
  }

  .crop-info {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  .crop-name {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 10px;
  }

  .crop-name a{
    text-decoration: none;
    color: black;
  }
  .crop-short-info {
    font-size: 16px;
  }

  .search-container{
    width: 75%;
    margin: 3rem  auto;

  }
</style>


<div class="search-container">
  {{#each results}}
  <div class="crop-container">
    <a href="{{link}}" class="crop-image">
      <img 
        src="{{image}}" 
        alt="{{name}}" 
      >
    </a>
    <div class="crop-info">
      <div class="crop-name"><a href="{{link}}">{{name}}</a></div>
      <div class="crop-short-info">{{short_info}}</div>
    </div>
  </div>
  {{/each}}
</div>
  
