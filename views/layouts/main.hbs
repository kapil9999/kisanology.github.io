<!doctype html>
<html lang="en">

<head>
    <title>Carousel Template Â· Bootstrap v5.3</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />

</head>

<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">Kisanology</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                    aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/">Home</a>
                        </li>
                        <li class="nav-item" id="add-crop-btn">
                            <a class="nav-link" href="/crop-form">Add Crop</a>
                        </li>

                        <li class="nav-item" id="add-crop-btn">
                            <a class="nav-link" href="/faq">FAQs</a>
                        </li>

                        <li class="nav-item" id="add-crop-btn">
                            <a class="nav-link" href="/posts">Help Forum</a>
                        </li>

                        <li class="nav-item" id ="add-crop-btn">
                            <a class="nav-link" href="/help">Help</a>
                        </li>

                    </ul>
                    <form action="/search" class="d-flex" role="search" id="search-form">
                        <input class="form-control me-2" type="search" name="q" placeholder="Search"
                            aria-label="Search" />
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                    <div id="auth-btns">
                        <a class="btn btn-outline-success" href="/login">Login</a>
                        <a class="btn btn-outline-success" href="/register">Register</a>
                    </div>
                    <div id="logout-btn">
                        <a class="btn btn-outline-success" >Logout</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    {{{body}}}


    <script>
        {{#if authToken}}
            localStorage.setItem("authToken", "{{authToken}}")
            //window.location.href="/"
        {{/if}}
        let authToken=localStorage.getItem("authToken")
        document.getElementById('search-form').style.marginRight="1rem";
        if(authToken){     // logged in
            document.getElementById('auth-btns').setAttribute('style', 'display:none !important');
        }else{              // logged out
            console.log("logged out")
            document.getElementById('search-form').setAttribute('style', 'display:none !important');
            document.getElementById('logout-btn').setAttribute('style', 'display:none !important');
            document.getElementById('add-crop-btn').setAttribute('style', 'display:none !important');
        }


        document.getElementById("logout-btn").onclick= function(e){
            localStorage.removeItem('authToken')
            window.location.href="/login"
        }

    </script>
</body>

</html>