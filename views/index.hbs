<main>
	<div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
		<div class="carousel-indicators" style="margin: 0;">
			{{#each crops}}
			<button type="button" data-bs-target="#myCarousel" data-bs-slide-to="{{@index}}" {{#if
				@first}}class="active" {{/if}} aria-current="true" aria-label="Slide {{@index}}"></button>
			{{/each}}
		</div>
		<div class="carousel-inner">
			{{#each crops}}
			<div class="carousel-item {{#if @first}} active {{/if}}"
				style="background-image: url(/images/{{image}}); background-size: cover; background-position: center;">
				<div class="container">
					<div class="carousel-caption" style="background-color: rgba(219, 216, 216, 0);">
						<h1>{{capitalizeFirst plant_name}}</h1>
						<p>{{capitalizeFirst short_info}}</p>
						<p>
							<a class="btn btn-lg btn-primary" href="/crops/{{_id}}" id="cotton-learn-more">Learn
								more</a>
						</p>
					</div>
				</div>
			</div>
			{{/each}}
		</div>

		<button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Previous</span>
		</button>
		<button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Next</span>
		</button>
	</div>
</main>
